#CSS CODING Format for Google Homepage
* {
	box-sizing: border-box;
}

body {
	font-family: Arial, Helvetica, sans-serif;
}

.container {
	width: 500px;
	margin: 0 auto;
}

.navbar-items {
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.navbar-items a {
	float: right;
}

.navbar-items a {
	display: block;
	text-align: center;
	padding: 14px 10px;
	font-size: 13px;
}

.navbar {
	width: 100%;
	height: 50px;
	margin-bottom: 150px;
}

.search-bar {
	display: block;
	width: 100%;
	height: 45px;
	border-radius: 25px;
	padding: 15px;
	border: 1px solid rgb(196, 196, 196);
	outline: none;
}

.search-bar:hover {
	box-shadow: 1px 1px 5px #8888889f;
}

.logo {
	display: block;
	margin: 0 auto;
}

.buttons {
	display: flex;
	justify-content: center;
}

.search-button {
	margin: 30px 5px;
	padding: 10px 20px;
	text-align: center;
	background-color: #f4f4f4;
	color: #000000b6;
	border: none;
	border-radius: 5px;
	outline: none;
}

.search-button:hover {
	box-shadow: 1px 1px 3px #8888889f;
